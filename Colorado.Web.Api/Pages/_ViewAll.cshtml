@using Core.Entities
@model IEnumerable<Cliente>
<table class="table table-bordered" id="clienteTable">
	<thead>
		<tr>
			<th>
				Código Cliente
			</th>
			<th>
				Nome
			</th>
			<th>
				Endereço
			</th>
			<th>
				Cidade
			</th>
			<th>
				U.F.
			</th>
			<th>
				Data Cadastro
			</th>
			<th>
				Ações
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Count() != 0)
		{
			@foreach (var cliente in Model)
			{
				<tr>
					<td>
						@cliente.CodigoCliente
					</td>
					<td>
						@cliente.Nome
					</td>
					<td>
						@cliente.Endereco
					</td>
					<td>
						@cliente.Cidade
					</td>
					<td>
						@cliente.UF
					</td>
					<td>
						@cliente.DataCadastro
					</td>
					<td text-right">
						<a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@cliente.Id','Editar Cliente')" class="btn btn-info text-white"> Editar</a>
						<form method="post" asp-page="Index" asp-route-id="@cliente.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
							<button type="submit" class="btn btn-danger text-white"> Delete</button>
						</form>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
<script>
	$(document).ready(function () {
		$("#clienteTable").DataTable();
	});
</script>
