@using Core.Entities
@model Cliente
<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.Id" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Código Cliente</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="CodigoCliente" name="CodigoCliente" class="form-control">
            <span asp-validation-for="CodigoCliente" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Nome</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Nome" name="Nome" class="form-control">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Endereço</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Endereco" name="Endereco" class="form-control">
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Cidade</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Cidade" name="Cidade" class="form-control" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">U.F.</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="UF" name="UF" class="form-control" />
            <span asp-validation-for="UF" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Data Cadastro</label>
        <div class="col-md-9">
            <input type="date" autocomplete="off" asp-for="DataCadastro" name="DataCadastro" class="form-control" />
            <span asp-validation-for="DataCadastro" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary save-button">Salvar</button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
